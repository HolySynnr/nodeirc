			| Getting started with nodeirc
		meta(http-equiv="Content-Type",content="text/html; charset=utf-8")
		link(href='http://fonts.googleapis.com/css?family=Raleway:400,700',rel='stylesheet',type='text/css')
		style.
			body {
				font-family: 'Raleway', sans-serif;
				color: #333;
				max-width: 800px;
				margin: 0px auto;
			}

			a {
				text-decoration: none;
				padding-bottom: 1px;
				border-bottom: 1px solid #acacac;
				color: #58A775;
			}

			a:hover {
				border-bottom: 1px dotted #acacac;
				opacity: .75;
			}

			h1 {
				font-size: 300%;
			}

			p, li {
				line-height: 1.6em;
			}

			ul {
				list-style: none;
				margin: 0px;
				padding: 10px;
				background: #eee;
			}

			ul + ul {
				padding: 0px;
			}

			ul li:not(:last-child) {
				margin: 4px 0px;
				padding-bottom: 6px;
				background: #eee;
			}

			img.country {
				max-height: 14px;
				padding-left: 1px;
				padding-right: 2px;
			}
